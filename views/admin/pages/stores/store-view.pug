extends ../../layout-view

block view
  if store && !store.publish
    .row
      .col-md-12.ph-1
        .alert.tc.p-2 TIENDA NO PUBLICADA: Soló tú la puedes ver.
  if store && !store.approve
    .row
      .col-md-12.ph-1
        .alert.tc.p-2 TIENDA NO APROBADA: debes publicar la tienda y un administrador la revisará
  table.small.table.table--lines
    tbody
      tr
        td.w-100
          .b Estado
          if store.approve
            | Aprobado
          else
            | Pendiente de revisión
        td &nbsp;
      tr
        td.w-100
          .b Publicación
          if store.publish && store.approveSend
            | Un administrador esta revisando la tienda para publicarla
          else if store.publish && !store.approve
            | Esta tienda aun no es visible, necesita ser enviada a revisión
          else if store.publish
            | Esta tienda es visible para todos
          else
            | Soló tú la puedes ver la tienda
        td.tc
          if store.publish
            a.btn.btn--primary.small(href=`/administracion/tiendas/${req.params.storeID}/desactivar`) Desactivar tienda
          else
            a.btn.btn--primary.small(href=`/administracion/tiendas/${req.params.storeID}/publicar`) Publicar
      tr
        td.w-100
          .b Nombre
          | #{store.name}
        td.tc(rowspan=2)
          a.btn.btn--primary.small(href=`/administracion/tiendas/${req.params.storeID}/editar`) Editar
      tr
        td.w-100
          .b URL
          | #{req.site.url}tiendas/#{store.slug}
  .hr.mh-4
  table.small.table.table--lines
    tbody
      tr
        td.w-100.tc.title.t-error.b Zona de Peligro
      tr
        td.w-100.tc
          button.btn.btn--error.p-0-5.open-modal-action(
                    title='Eliminar'
                    data-title='¿Desea eliminar la tienda?'
                    data-cancel='Cancelar'
                    data-action='Si, Eliminar'
                    data-method='DELETE'
                    data-confirm='eliminar'
                    data-url=`${appCnf.url.api}admin/stores/${req.params.storeID}`
                    data-page='/administracion/tiendas'
                  ) ELIMINAR TIENDA