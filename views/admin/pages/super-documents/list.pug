extends ../../layout-list

block list
  if items.length
    .remark
      b P
      | #{' '} = Publicado,
      | #{' '}
    table.small.table.table--lines.table--striped
      thead
        tr
          th.b &nbsp;
          th.b.tc P
          th.b Nombre
          th.b Slug
          th.b URL
      tbody
        each item of items
          tr
            td.tc
              a(href=`/administracion/super/documentos/editar/${item._id}` title='Ver')
                i.fas.fa-search
            td.tc
              +boolean(item.publish)
            td
              a.b(href=`/administracion/super/documentos/editar/${item._id}`) #{item.title}
            td
              | #{item.slug}
            td
              a.b(href=`/documentos/${item.slug}` target='_blank') #{item.slug}
            
      tfoot
        tr
          th(colspan="5")
            +paginator
  else
    +noItems('No hay documentos creadas.')