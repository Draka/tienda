extends ../../layout-edit

block edit
  form.validate-rest(id="updateProfileForm" action=`${appCnf.url.api}admin/stores` method="post" data-page=`/administracion/tiendas/creado` data-error="#form-results")
    .row
      .col-xs-12
        .form-group
          .form-control
            input.input#name(type="text" name="name" placeholder=' ' required)
            label(for='name') Nombre de la tienda
        .form-group.flex
          .form-control
            .nowrap.ellipsis #{appCnf.url.site}
            label.nowrap(for='callsign') URL
          .form-control.w-100.pl-1
            input.input#slug(type="text" name="slug" placeholder=' ' required slug)
            label(for='slug') Slug
        .msg.info.mb-0-5
          .flex
            i.fas.fa-exclamation-triangle.h4.mr-0-25.w-2.tc
            | El valor de Slug es permanente.
    .row
      .col-xs-12.tr
        button.btn.btn--primary.w-100-xs.mt-2-xs(type="submit") Crear Tienda
