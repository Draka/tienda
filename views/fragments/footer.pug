footer.mt-8
  .container-fluid(class=_.get(global.appCnf,'site.style.footer')||'primary')
    .container.ph-1
      .row
        .col-md-4.tc.vertical-align-center.mb-3-xs.mb-3-sm.mb-3-md
          | !{getFragment('footer-l-1-c-1')}
        .col-md-8.vertical-align-center
          | !{getFragment('footer-l-1-c-2')}
  .container-fluid(class=(_.get(global.appCnf,'site.style.footer')||'primary')+'-500')
    .container.tc.ph-1
      .row
        .col-md-4.mb-1-xs.mb-1-sm.mb-1-md
          | !{getFragment('footer-l-2-c-1')}
        .col-md-4.mb-1-xs.mb-1-sm.mb-1-md
          | !{getFragment('footer-l-2-c-2')}
        .col-md-4.mb-1-xs.mb-1-sm.mb-1-md
          | !{getFragment('footer-l-2-c-3')}

  if !store && _.find(_.get(appCnf, 'site.contacts'), {slug: 'whatsapp'})
    .m-1.fixed.bottom
      a(href=`https://wa.me/${_.find(_.get(appCnf, 'site.contacts'), {slug: 'whatsapp'}).value}?text=Hola, tengo una pregunta sobre ${_.get(appCnf, 'site.name')}` title='Whatsapp' target='_blank')
        .t-action-300.bigx2
          i.fab.fa-whatsapp.social

  else if store
    .m-1.fixed.bottom
      .t-action-300.bigx2.hand#open-modal-whatsapp
        i.fab.fa-whatsapp.social
    #modal-whatsapp.modal.start-hide(tabindex='-1' role='dialog')
      .modal-dialog(role='document')
          .modal-content
            .modal-header
              .b Contactar con?
              button.close.close-modal.btn-flat(type='button' data-dismiss='modal' aria-label='Cerrar')
                span(aria-hidden='true') &times;
            .modal-body
              each contact in store.contacts
                if contact.value
                  if contact.slug == 'whatsapp'
                    a(href=`https://wa.me/${contact.value}?text=Hola, ${store.name} quisiera saber m√°s de tus productos.` title='Whatsapp' target='_blank')
                      .flex
                        .t-action-300.big
                          i.fab.fa-whatsapp.social
                        .title.b.ml-1 #{store.name}?
              if _.find(_.get(appCnf, 'site.contacts'), {slug: 'whatsapp'})
                a.mt-1(href=`https://wa.me/${_.find(_.get(appCnf, 'site.contacts'), {slug: 'whatsapp'}).value}?text=Hola, tengo una pregunta sobre ${_.get(appCnf, 'site.name')}` title='Whatsapp' target='_blank')
                  .flex
                    .t-action-300.big
                      i.fab.fa-whatsapp.social
                    .title.b.ml-1 #{_.get(appCnf, 'site.name')}?

            .modal-footer.tr
              button.close-modal.btn.btn--white(type='button') Cerrar