mixin imgSocial
    if product && product.imagesSizes && product.imagesSizes.length
      link(href=product.imagesSizes[0]['484x484_jpg'] rel='image_src')
      meta(name='twitter:image' content=product.imagesSizes[0]['484x484_jpg'])
      meta(property='og:image' content=product.imagesSizes[0]['484x484_jpg'])
    else if store && _.get(store, 'imageSizes.social')
      link(href=_.get(store, 'imageSizes.social.1028x540_jpg') rel='image_src')
      meta(name='twitter:image' content=_.get(store, 'imageSizes.social.1028x540_jpg'))
      meta(property='og:image' content=_.get(store, 'imageSizes.social.1028x540_jpg'))
    else if store && _.get(store, 'imageSizes.logo')
      link(href=_.get(store, 'imageSizes.logo.484x484_jpg') rel='image_src')
      meta(name='twitter:image' content=_.get(store, 'imageSizes.logo.484x484_jpg'))
      meta(property='og:image' content=_.get(store, 'imageSizes.logo.484x484_jpg'))
    else
      link(href=_.get(req, 'site.images.social.img') rel='image_src')
      meta(name='twitter:image' content=_.get(req, 'site.images.social.img'))
      meta(property='og:image' content=_.get(req, 'site.images.social.img'))


