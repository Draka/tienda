extends ../../layout

block content
  include ../../fragments/header_store.pug

  if xofferts.length
    .container.ph-1.white-xs
      .row
        .col-xs-12
          .title.b OFERTAS
      .row.mb-2
        each item,i in xofferts
          if i==2
            .col.hide-xs
              +simpleProduct(item)
          else if i==3
            .col.hide-xs.hide-sm
              +simpleProduct(item)
          else if i==4
            .col.hide-xs.hide-sm.hide-md
              +simpleProduct(item)
          else if i==5
            .col.hide-xs.hide-sm.hide-md.hide-lg
              +simpleProduct(item)
          else
            .col
              +simpleProduct(item)

  if xnew.length
    .container.ph-1.white-xs
      .row
        .col-xs-12
          .title.b NUEVOS PRODUCTOS
      .row.mb-2
        each item,i in xnew
          if i==2
            .col.hide-xs
              +simpleProduct(item)
          else if i==3
            .col.hide-xs.hide-sm
              +simpleProduct(item)
          else if i==4
            .col.hide-xs.hide-sm.hide-md
              +simpleProduct(item)
          else if i==5
            .col.hide-xs.hide-sm.hide-md.hide-lg
              +simpleProduct(item)
          else
            .col
              +simpleProduct(item)

  .container
    .row
      .col-xs-12
        .title.b PRODUCTOS
    .row
      each item in products
        .col-xs-6.col-md-4.col-lg-3.pb-1
          +simpleProduct(item)


