mixin imgSocial
    if product && product.imagesSizes && product.imagesSizes.length
      link(href=product.imagesSizes[0]['484x484_jpg'] rel='image_src')
      meta(name='twitter:image' content=product.imagesSizes[0]['484x484_jpg'])
      meta(property='og:image' content=product.imagesSizes[0]['484x484_jpg'])
    if store && store.imageSizes
      link(href=store.imageSizes['484x484_jpg'] rel='image_src')
      meta(name='twitter:image' content=store.imageSizes['484x484_jpg'])
      meta(property='og:image' content=store.imageSizes['484x484_jpg'])
    else
      link(href=appCnf.url.static+'tenancy/'+appCnf.tenancy+'/images/compartir.jpg' rel='image_src')
      meta(name='twitter:image' content=appCnf.url.static+'tenancy/'+appCnf.tenancy+'/images/compartir.jpg')
      meta(property='og:image' content=appCnf.url.static+'tenancy/'+appCnf.tenancy+'/images/compartir.jpg')


