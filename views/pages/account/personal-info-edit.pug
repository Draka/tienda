extends ../../layout_account

block content
  .container
    include ../../fragments/breadcrumb

    .row
      .col-xs-6
        h1 Información Personal

    .row
      .col-md-8
        .white.br-1.rd-0-2.p-1.mb-2
          .msg.error#form-results
          form.validate-rest(id="updateProfileForm" action=`${config.url.api}users/personal-info` method="put" data-page=`/usuario` data-error="#form-results")
            .row
              .col-xs-12
                .form-group
                  .form-control
                    input.input#firstname(type="text" name="firstname" placeholder=' ' required value=_.get(user,'personalInfo.firstname'))
                    label(for='firstname') Nombre
              .col-xs-12
                .form-group
                  .form-control
                    input.input#lastname(type="text" name="lastname" placeholder=' ' required value=_.get(user,'personalInfo.lastname'))
                    label(for='lastname') Apellido
              .col-xs-12
                .form-group.flex
                  .form-control
                    select#callsign.input(name='callsign' required)
                      option(value="+57" selected=_.get(user,'personalInfo.callsign')=='+57') +57
                    label.nowrap(for='callsign') Indicativo País
                  .form-control.w-100.pl-1
                    input.input#cellphone(type="text" name="cellphone" placeholder=' ' required cellphone value=_.get(user,'personalInfo.cellphone'))
                    label(for='cellphone') Número de célular
            .row
              .col-xs-12.tr
                a.btn.btn--secondary.w-100-xs(href='/administracion/informacion-personal') Cancelar
                | #{' '}
                button.btn.btn--primary.w-100-xs.mt-2-xs(type="submit") Editar perfil
