extends layout

mixin boolean(b)
  if b
    span.action.p-0-25.pw-0-5.rd-0-2.tc
      i.fas.fa-check
  else
    span.error.ph-0-25.pw-0-5.rd-0-2.tc
      i.fas.fa-times

block content
  include fragments/breadcrumb

  .row
    .col-xs-6
      h1 #{title}
    .col-xs-6.tr
      if edit
        a.btn.btn--secondary(href=edit) Editar
      if approve
        a.btn.btn--secondary(href=approve) Aprobar
      if trust
        | #{' '}
        a.btn.btn--secondary(href=trust) Marcar como confiable

  .row
    .col-lg-12.col-xl-8
      block view