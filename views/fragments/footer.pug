footer.mt-8
  .container-fluid.primary
    .container.ph-1
      .row
        .col-md-4.tc.vertical-align-center.mb-3-xs.mb-3-sm.mb-3-md
          img.h-96p(src=_.get(global.appCnf, 'site.images.logoSquare.svg') alt=`${_.get(appCnf, 'site.name')} logo nombre`)
          .small.pt-1 TIENDAS EN PESOS COLOMBIANOS
        .col-md-8.vertical-align-center
          ul
            li.p-0-5
              a(href='/usuario/vendedor') ¿Interesado en vender sus productos?
            li.p-0-5
              a(href='/documentos/politica-de-privacidad-y-tratamiento-de-datos') Política de Privacidad y Tratamiento de Datos
            li.p-0-5
              a(href='/documentos/terminos-y-condiciones-cliente') Términos y Condiciones Cliente
            li.p-0-5
              a(href='/documentos/terminos-y-condiciones-vendedor') Términos y Condiciones Vendedor
            li.p-0-5
              | Comentarios y dudas:
              | #{' '}
              a.b(href=`mailto:${_.get(appCnf, 'site.email.emailInfo')}`) #{_.get(appCnf, 'site.email.emailInfo')}
  .container-fluid.primary-500
    .container.tc.ph-1
      .row
        .col-md-4.mb-1-xs.mb-1-sm.mb-1-md
          .small
            | Apoyado por
            | #{' '}
            a(href='https://santrato.com') santrato
        .col-md-4.mb-1-xs.mb-1-sm.mb-1-md
          .small COMPRA 100% SEGURA
        .col-md-4.mb-1-xs.mb-1-sm.mb-1-md
          img.h-2(src=appCnf.url.static+'images/logo-name.svg' alt='Véndelo Mejor logo blanco')
          .small powered by:
            | #{' '}
            a(href='https://vendelomejor.com/') Véndelo Mejor

  if !store && _.find(_.get(appCnf, 'site.contacts'), {slug: 'whatsapp'})
    .m-1.fixed.bottom
      a(href=`https://wa.me/${_.find(_.get(appCnf, 'site.contacts'), {slug: 'whatsapp'}).value}?text=Hola, tengo una pregunta sobre ${_.get(appCnf, 'site.name')}` title='Whatsapp' target='_blank')
        .t-action-300.bigx2
          i.fab.fa-whatsapp.social

  else if store
    .m-1.fixed.bottom
      .t-action-300.bigx2.hand#open-modal-whatsapp
        i.fab.fa-whatsapp.social
    #modal-whatsapp.modal.start-hide(tabindex='-1' role='dialog')
      .modal-dialog(role='document')
          .modal-content
            .modal-header
              .b Contactar con?
              button.close.close-modal.btn-flat(type='button' data-dismiss='modal' aria-label='Cerrar')
                span(aria-hidden='true') &times;
            .modal-body
              each contact in store.contacts
                if contact.value
                  if contact.slug == 'whatsapp'
                    a(href=`https://wa.me/${contact.value}?text=Hola, ${store.name} quisiera saber más de tus productos.` title='Whatsapp' target='_blank')
                      .flex
                        .t-action-300.big
                          i.fab.fa-whatsapp.social
                        .title.b.ml-1 #{store.name}?
              if _.find(_.get(appCnf, 'site.contacts'), {slug: 'whatsapp'})
                a.mt-1(href=`https://wa.me/${_.find(_.get(appCnf, 'site.contacts'), {slug: 'whatsapp'}).value}?text=Hola, tengo una pregunta sobre ${_.get(appCnf, 'site.name')}` title='Whatsapp' target='_blank')
                  .flex
                    .t-action-300.big
                      i.fab.fa-whatsapp.social
                    .title.b.ml-1 #{_.get(appCnf, 'site.name')}?

            .modal-footer.tr
              button.close-modal.btn.btn--white(type='button') Cerrar