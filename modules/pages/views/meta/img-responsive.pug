mixin multimedia(item, image, cssClass)
  if (image)
    img.lazy(data-src=image alt=_.truncate(item.alt, {'length': 30,'separator': ' '}) title=item.title class=cssClass?cssClass:'w-100')
  else
    img.lazy(data-src=`${appCnf.url.cdn}images/imagen_no_disponible.svg` alt=_.truncate(item.alt, {'length': 30,'separator': ' '}) title=item.title class=cssClass?cssClass:'maxw-100')

mixin img(item, image, size = ['196x196_jpg', '392x392_jpg'], cssClass)
  if (image)
    img.lazy(data-src=image[size[0]] data-retina=image[size[1]] alt=_.truncate(item.alt, {'length': 30,'separator': ' '}) title=item.title class=cssClass?cssClass:'maxw-100')
  else
    img(src=`${appCnf.url.cdn}images/imagen_no_disponible.svg` alt=_.truncate(item.alt, {'length': 30,'separator': ' '}) title=item.title class=cssClass?cssClass:'maxw-100')

if item.urlSize
  +img(item, _.get(item, `urlSize.${item.files[0]}`), sizes)
else if item.url
  +multimedia(item.title, _.get(item, `url.${item.files[0]}`))