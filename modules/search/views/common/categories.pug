extends /modules/common/views/layout-index

block view

  script(type='application/ld+json').
    {
      "@context": "https://schema.org/",
      "@type": "BreadcrumbList",
      "itemListElement": !{JSON.stringify(_.map(categoryIDs, (category, i)=>{return {"@type": "ListItem","position": i+1,"name": category.name,"item": `${_.get(req,'site.url')}categorias/${category.slugLong}`}}))}
    }

  .container
    .row.pb-2
      .col-xs-12
        if category
          h1.tc #{category.name}
        else
          h1.tc Categor√≠as
        .justify-content-center.spacer.t-primary
          each category in categoriesHeader
            if category.products
              a.item(href=`/categorias/${category.slugLong}`) #{category.name}

  .container.ph-1.white-xs
    .row.justify-content-center
      each product,i in products
        .col-xs-6.col-md-4.col-lg-3.pb-1
          +simpleProduct(product)
