extends /modules/admin/views/layout-list

block list
  if items.length
    table.small.table.table--lines.table--striped
      thead
        tr
          th.b &nbsp;
          th.b Nombre
      tbody
        each item of items
          tr
            td.tc
              a(href=`/administracion/super/ayuda-categorias/${item._id}/editar` title='Ver')
                i.fas.fa-pencil-alt
            td.w-100
              a.b(href=`/administracion/super/ayuda-categorias/${item._id}/editar`) #{item.name}

      tfoot
        tr
          th(colspan="5")
            +paginator
  else
    +noItems('No hay categor√≠as creadas.')