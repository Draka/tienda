#modalGeneral.modal.start-hide(tabindex='-1' role='dialog')
  .modal-dialog(role='document')
    form#modalGeneralForm.col-xs-12.validate-rest(action='' data-page='' method='' data-error="#general-form-results")
      .modal-content
        .modal-header
          .title.b
          button.close.close-modal.btn-flat(type='button' data-dismiss='modal' aria-label='Cerrar')
            span(aria-hidden='true')
              i.fas.fa-times
        .modal-body
          .msg.error#general-form-results
        .modal-footer.tr
          button.close-modal.btn.btn--white.btn-cancel(type='button')
          | #{' '}
          button.btn.btn--primary.btn-action(type='submit')
