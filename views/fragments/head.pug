link(rel='preload' href=config.url.static+'webfonts/fa-solid-900.woff2' as='font' crossorigin type='font/woff2')
link(rel='preload' href=config.url.static+'tenancy/'+config.tenancy+'/css/style.min.css?='+config.v as='style')
link(rel='preload' href=config.url.static+'css/fonts.min.css?='+config.v as='style' )


link(rel='preload' href=config.url.static+'lib/script.js?='+config.v as='script')
if js
  link(rel='preload' href=config.url.static+'js/'+js+'.js?='+config.v as='script')

