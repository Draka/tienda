extends ../../layout-edit-cmp

block edit
  form.validate-rest(
    id="updateProfileForm"
    action=`${appCnf.url.api}admin/super/documents`
    method="post"
    data-page=`/administracion/super/documentos`
    data-error="#form-results")
    .white.br-1.rd-0-2.p-3
      .msg.error#form-results
      .row
        .col-xs-12
          .form-group
            .form-control
              label.switch
                input#publish(type="hidden" name="publish" value='0')
                span.check
                span.caption Publicado
          .form-group
            .form-control
              input.input#title(type="text" name="title" placeholder=' ' required)
              label(for='title') Título
          .form-group
            .form-control
              input.input#seo(type="text" name="seo" data-count="180" data-target="#count-short-description" placeholder=' ')
              label(for='seo') SEO (corta, entre 150 y 180 caracteres)
            .small No más de 180 caracteres. Lleva #{' '}
              spam#count-short-description
              | #{' '}caracteres
          .form-group.ph-1
            .subtitle.mb-0-5 Html
            .form-control
              textarea.cke-admin#html(name="html" placeholder=' ')
      .row
        .col-xs-12.tr
          button.btn.btn--primary.w-100-xs.mt-1-xs(type="submit") Crear Documento
