extends ../../layout-view

block view
  table.small.table.table--lines
    tbody
      tr
        th.nowrap.ellipsis Publicado
        td.w-100
          +boolean(store.publish)
      tr
        th.nowrap.ellipsis Aprobado
        td.w-100
          +boolean(store.approve)
      tr
        th.nowrap.ellipsis Nombre
        td.w-100 #{store.name}
      tr
        th.nowrap.ellipsis URL
        td.w-100 #{req.site.url}#{store.slug}
      tr
        th.nowrap.ellipsis SEO
        td.w-100 #{store.seo}
      tr
        th.nowrap.ellipsis Descripción
        td.w-100 #{store.description}
      tr
        th.nowrap.ellipsis Descripción Larga
        td.w-100
          .h-230p.oa !{store.descriptionLong}
      tr
        th.nowrap.ellipsis Pie de página
        td.w-100
          .h-230p.oa.sh.p-1 !{store.vision}
      tr
        th.nowrap.ellipsis Departamento
        td.w-100 #{store.department}
      tr
        th.nowrap.ellipsis Municipio
        td.w-100 #{store.town}
      tr
        th.nowrap.ellipsis Actividad primaria
        td.w-100 #{store.primaryActivity}