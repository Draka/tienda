extends /modules/common/views/layout-index

block view

  script(type='application/ld+json').
    {
      "@context": "https://schema.org/",
      "@type": "BreadcrumbList",
      "itemListElement": !{JSON.stringify(_.map(categoryIDs, (category, i)=>{return {"@type": "ListItem","position": i+1,"name": category.name,"item": `${req.urlSite}categorias/${category.slugLong}`}}))}
    }

  .container
    .row.pb-2
      .col-xs-12
        if category
          h1.tc #{category.name}
        else
          h1.tc #{_.capitalize(req.params.group)}

  .container.ph-1.white-xs
    .row.justify-content-center
      each product,i in products
        .col-xs-6.col-md-4.col-lg-3.pb-1
          +simpleProduct(product)
