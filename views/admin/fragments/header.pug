header
  .hide-xs
    nav.navbar.primary-500.fixed.sh
      .container.left
        a.logo(href='/')
          img(src=_.get(req, 'site.images.logoTop.svg') alt=`${_.get(req, 'site.name')} logo`)

        .expand
        ul.flex.menu
          li
            a(href='/administracion/tiendas/pedidos') Pedidos
        .relative
          a.dropdown(aria-controls='menu-login')
            span
              i.fas.fa-user-circle.fa-fw
              | #{' '}
              span Hola, #{_.get(req, 'user.personalInfo.firstname')}
            span.icon.ml-1
              i.fas.fa-arrow-down.fa-fw
          #menu-login.dropdown-list.right.sh
            ul(role='menu')
              if req.user && req.user.admin
                li(role='menuitem')
                  a.item(href='/administracion/super/configuracion')
                    i.fas.fa-store
                    | #{' '}Configuración General
                li.hr
              if req.user && (req.user.admin || req.user.adminStore)
                li(role='menuitem')
                  a.item(href='/administracion/tiendas')
                    i.fas.fa-store
                    | #{' '}Mi tienda
                li.hr
              li(role='menuitem')
                a.item(href='/usuario')
                  i.far.fa-address-card
                  | #{' '}Mi cuenta
              li(role='menuitem')
                a.item(href='/usuario/pedidos')
                  i.fas.fa-shopping-bag
                  | #{' '}Mis pedidos
              li.hr
              li(role='menuitem')
                a.item(href='/cerrar-sesion')
                  i.fas.fa-sign-out-alt
                  | #{' '}Cerrar Sesión

  .show-xs
    nav.navbar.primary.sh.fixed.top
      ul.flex.menu.w-100
        li
          a.sidenav-action.w-4.justify-content-center(href='#' data-target='#mobile-menu')
            i.fas.fa-bars
            span.out-screen Menú
        li.expand
          a.logo.justify-content-center(href='/')
            img(src=_.get(req, 'site.images.logoTop.svg') alt=`${_.get(req, 'site.name')} logo`)

  nav#mobile-menu.sidenav
    .sidenav-body
      ul.list(role='menu')
        li(role='menuitem')
          a(href='/cerrar-sesion')
            i.fas.fa-sign-out-alt
            | #{' '}Cerrar Sesión

      .white-500.w-100.flex.h-3
        .w-100.title.tc.b Administrador
      .pl-1
        if _.get(req,'user.admin')
          include menu-super.pug
        include menu.pug
