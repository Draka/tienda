extends /modules/admin/views/layout-edit-cmp

block edit
  form.validate-rest(
    id="updateProfileForm"
    action=`${appCnf.url.api}admin/super/help-categories`
    method="post"
    data-page=`/administracion/super/ayuda-categorias`
    data-error="#form-results")
    .white.br-1.rd-0-2.p-3
      .msg.error#form-results
      .row
        .col-xs-12
          .form-group
            .form-control
              select#categoryID.input(name='categoryID')
                option(value="") --
                each category of items
                  option(value=category._id) #{category.name}
              label.nowrap(for='categoryID') Categoría Padre
          .form-group
            .form-control
              input.input#order(type="number" name="order" placeholder=' ' value=50)
              label(for='order') Orden
          .form-group
            .form-control
              input.input#name(type="text" name="name" placeholder=' ' required)
              label(for='name') Nombre
          .form-group
            .form-control
              textarea.input#description(name="description" placeholder=' ' data-count="180" data-target="#count-short-description")
              label(for='description') Descripción
            .small No más de 180 caracteres. Lleva #{' '}
              spam#count-short-description
              | #{' '}caracteres
          .form-group.ph-1
            .subtitle.mb-0-5 Texo
            .form-control
              textarea.cke#text(name="text" placeholder=' ')
      .row
        .col-xs-12.tr
          button.btn.btn--primary.w-100-xs.mt-2-xs(type="submit") Crear Categoría
