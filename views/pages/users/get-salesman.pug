extends ../../layout

block content
  .container
    include ../../fragments/breadcrumb

  .container
    h1 Quiero empezar a vender

    div 
        | Texto
    .row.justify-content-center
      .col-xs-12.col-md-6
        if !session
            .oh.white.br-1.rd-0-2.mb-2
              .p-1.tc
                .big
                  | Para continuar necesitas
                  | #{' '}
                  a.b(href="/iniciar-sesion") iniciar sesión
                  | #{' '}
                  | o
                  | #{' '}
                  a.b(href="/registro") crear una cuenta
                  | .
        else
          .oh.white.br-1.rd-0-2.mh-2
            .p-1
              .msg.error#form-results
              .row
                form.col-xs-12.validate-rest(id="passwordResetForm" action=`${config.url.api}users/get-salesman` method="post" data-page=`recuperar-contrasena-confirmacion` data-error="#form-results")
                  .row
                    .col-xs-12
                      .form-group
                        .form-control
                          label
                            input.checkbox#tyc(
                              type="checkbox" 
                              name="tyc" 
                              value='1' 
                              requireCheck 
                              data-msg-error="Debe aceptar los Términos y Condiciones de Vendedor para continuar"
                            )
                            span Acepto términos y condiciones de vendedor
                    .col-xs-12
                      .form-group
                        .form-control
                          a.b(href='/doc/terminos-y-condiciones-vendedor') 
                            | Ver Términos y Condiciones Vendedor
                            | #{' '}
                            i.fas.fa-external-link-alt
                  .row
                    .col-xs-12.tr
                      button.btn.btn--primary.w-100-xs(type="submit") Mejorar mi cuenta a vendedor